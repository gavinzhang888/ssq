<ol class="breadcrumb white">
  <li><a href="/"><%= I18n.t :"page.static.home" %></a></li>
  <li class="active"><%= I18n.t :"double_ball.modelname" %> <span ng-bind="double_balls.meta.total"></span> <%= I18n.t :"page.static.unit" %></li>
</ol>
<div class="action-bar">
  <div class="action-btns form-inline">
    <a href="javascript:void(0);" class="btn btn-default" ng-click="show_list=!show_list"><i class="fa fa-adjust"></i></a>
    <a href="javascript:void(0);" ng-click="refreshPage()" class="btn btn-default"><i class="fa fa-refresh"></i></a>
    <a href="javascript:void(0);" print-div="#print-area" class="btn btn-default"><i class="fa fa-print"></i></a>
    <button class="btn btn-default" data-toggle="collapse" data-target="#table-search" data-animate="" data-play="bounceInUp"><i class="fa fa-search"></i></button>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <%= I18n.t :"page.static.more" %> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="javascript:void(0);" ng-click="setPerpage(15)"><%= I18n.t :"page.static.per_page" %> 15 <%= I18n.t :"page.static.unit" %></a></li>
        <li><a href="javascript:void(0);" ng-click="setPerpage(50)"><%= I18n.t :"page.static.per_page" %> 50 <%= I18n.t :"page.static.unit" %></a></li>
        <li class="divider"></li>
        <li><a ng-href="/properties?t=double_ball" target="_blank"><%= I18n.t :"page.static.custom" %></a></li>
        <li><a href="javascript:void(0);" ng-click="export()"><%= I18n.t :"page.static.export" %></a></li>
        <li><a href="javascript:void(0);" print-div="#print-area"><%= I18n.t :"page.static.print" %></a></li>
      </ul>
    </div>
  </div>

  <div class="willPaginate"
   data-params="willPaginateCollection"
   data-on-click="getPage"
   data-config="willPaginateConfig"
   ng-if="double_balls.meta.total > double_balls.meta.perpage">
  </div>
</div>
<div class="panel panel-default table-responsive" id="print-area" ng-init="getData()">
  <div class="panel-body">
    <table class="table table-striped table-hover table-auto" ng-if="show_list">
      <thead>
        <tr>
          <th>
          </th>
          <th><input type="checkbox" ng-model="select_datas[0]" ng-click="select_items(double_balls)"/></th>
          <th><%= I18n.t :"double_ball.number" %></th>
          <th><%= I18n.t :"double_ball.date" %></th>
          <th><%= I18n.t :"double_ball.week_number" %></th>
          <th><%= I18n.t :"double_ball.red_1" %></th>
          <th><%= I18n.t :"double_ball.red_2" %></th>
          <th><%= I18n.t :"double_ball.red_3" %></th>
          <th><%= I18n.t :"double_ball.red_4" %></th>
          <th><%= I18n.t :"double_ball.red_5" %></th>
          <th><%= I18n.t :"double_ball.red_6" %></th>
          <th><%= I18n.t :"double_ball.blue" %></th>
          <th><%= I18n.t :"double_ball.odd" %></th>
          <th><%= I18n.t :"double_ball.prime" %></th>
          <th><%= I18n.t :"double_ball.red_total" %></th>
          <th><%= I18n.t :"double_ball.total" %></th>
          <th><%= I18n.t :"double_ball.created_at" %></th>
        </tr>
      </thead>
      <tbody>
       <tr ng-repeat="double_ball in double_balls">
         <td>
         </td>
         <td><input type="checkbox" ng-model="select_datas[double_ball.id]" ng-click="select_item(double_balls)" /></td>
         <td><a ng-href="/double_balls/{{double_ball.id}}">{{ double_ball.number }}</a></td>
         <td>{{ double_ball.date }}</td>
         <td>{{ double_ball.week_number }}</td>
         <td>{{ double_ball.red_1 }}</td>
         <td>{{ double_ball.red_2 }}</td>
         <td>{{ double_ball.red_3 }}</td>
         <td>{{ double_ball.red_4 }}</td>
         <td>{{ double_ball.red_5 }}</td>
         <td>{{ double_ball.red_6 }}</td>
         <td>{{ double_ball.blue }}</td>
         <td>{{ double_ball.odd }}</td>
         <td>{{ double_ball.prime }}</td>
         <td>{{ double_ball.red_total }}</td>
         <td>{{ double_ball.total }}</td>
         <td>{{ double_ball.created_at }}</td>
       </tr>
      </tbody>
    </table>
    <h2 style="text-align:center;">和值报表</h2>
    <canvas class="chart chart-line" chart-data="data" chart-labels="labels" chart-series="series" chart-legend="true"> </canvas>
    <h2 style="text-align:center;">奇数质数报表</h2>
    <canvas class="chart chart-line" chart-data="data2" chart-labels="labels" chart-series="series2" chart-legend="true"> </canvas>
  </div>
</div>
<div class="action-bar">
  <div class="willPaginate"
   data-params="willPaginateCollection"
   data-on-click="getPage"
   data-config="willPaginateConfig"
   ng-if="double_balls.meta.total > double_balls.meta.perpage">
  </div>
</div>
