<ol class="breadcrumb white">
  <li><a href="/"><%= I18n.t :"page.static.home" %></a></li>
  <li class="active"><%= I18n.t :"prize_ball.modelname" %> <span ng-bind="prize_balls.meta.total"></span> <%= I18n.t :"page.static.unit" %></li>
</ol>
<div class="action-bar">
  <div class="action-btns form-inline">
    <a ng-href="/prize_balls/new" class="btn btn-default"><i class="fa fa-plus"></i></a>
    <!-- <a ng-href="/prize_balls/new" class="btn btn-default"><i class="fa fa-pencil-square-o"></i></a> -->
    <a href="javascript:void(0);" class="btn btn-default" ng-click="deleteAllAlert(prize_balls,prize_ball)"><i class="fa fa-trash-o"></i></a>
    <a href="javascript:void(0);" ng-click="refreshPage()" class="btn btn-default"><i class="fa fa-refresh"></i></a>
    <!-- <a href="javascript:void(0);" print-div="#print-area" class="btn btn-default"><i class="fa fa-print"></i></a> -->
    <button class="btn btn-default" data-toggle="collapse" data-target="#table-search" data-animate="" data-play="bounceInUp"><i class="fa fa-search"></i></button>
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <%= I18n.t :"page.static.more" %> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="javascript:void(0);" ng-click="setPerpage(15)"><%= I18n.t :"page.static.per_page" %> 15 <%= I18n.t :"page.static.unit" %></a></li>
        <li><a href="javascript:void(0);" ng-click="setPerpage(50)"><%= I18n.t :"page.static.per_page" %> 50 <%= I18n.t :"page.static.unit" %></a></li>
        <li class="divider"></li>
        <li><a ng-href="/properties?t=prize_ball" target="_blank"><%= I18n.t :"page.static.custom" %></a></li>
        <li><a href="javascript:void(0);" ng-click="export()"><%= I18n.t :"page.static.export" %></a></li>
        <li><a href="javascript:void(0);" print-div="#print-area"><%= I18n.t :"page.static.print" %></a></li>
      </ul>
    </div>
  </div>

  <div class="willPaginate"
   data-params="willPaginateCollection"
   data-on-click="getPage"
   data-config="willPaginateConfig"
   ng-if="prize_balls.meta.total > prize_balls.meta.perpage">
  </div>
</div>
<div class="panel panel-default table-responsive" id="print-area">
  <div class="panel-body">
    <table class="table table-striped table-hover table-auto" ng-init="getData()">
      <thead>
        <tr>
          <th>
          </th>
          <th><input type="checkbox" ng-model="select_datas[0]" ng-click="select_items(prize_balls)"/></th>
          <th><%= I18n.t :"prize_ball.number" %></th>
          <th><%= I18n.t :"prize_ball.date" %></th>
          <th><%= I18n.t :"prize_ball.week_number" %></th>
          <th><%= I18n.t :"prize_ball.red_1" %></th>
          <th><%= I18n.t :"prize_ball.red_2" %></th>
          <th><%= I18n.t :"prize_ball.red_3" %></th>
          <th><%= I18n.t :"prize_ball.red_4" %></th>
          <th><%= I18n.t :"prize_ball.red_5" %></th>
          <th><%= I18n.t :"prize_ball.red_6" %></th>
          <th><%= I18n.t :"prize_ball.blue" %></th>
          <th><%= I18n.t :"prize_ball.odd" %></th>
          <th><%= I18n.t :"prize_ball.prime" %></th>
          <th><%= I18n.t :"prize_ball.red_total" %></th>
          <th><%= I18n.t :"prize_ball.total" %></th>
          <th><%= I18n.t :"prize_ball.created_at" %></th>
        </tr>
      </thead>
      <tbody>
       <tr ng-repeat="prize_ball in prize_balls">
         <td>
         </td>
         <td><input type="checkbox" ng-model="select_datas[prize_ball.id]" ng-click="select_item(prize_balls)" /></td>
         <td><a ng-href="/prize_balls/{{prize_ball.id}}">{{ prize_ball.number }}</a></td>
         <td>{{ prize_ball.date }}</td>
         <td>{{ prize_ball.week_number }}</td>
         <td>{{ prize_ball.red_1 }}</td>
         <td>{{ prize_ball.red_2 }}</td>
         <td>{{ prize_ball.red_3 }}</td>
         <td>{{ prize_ball.red_4 }}</td>
         <td>{{ prize_ball.red_5 }}</td>
         <td>{{ prize_ball.red_6 }}</td>
         <td>{{ prize_ball.blue }}</td>
         <td>{{ prize_ball.odd }}</td>
         <td>{{ prize_ball.prime }}</td>
         <td>{{ prize_ball.red_total }}</td>
         <td>{{ prize_ball.total }}</td>
         <td>{{ prize_ball.created_at }}</td>
       </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="action-bar">
  <div class="willPaginate"
   data-params="willPaginateCollection"
   data-on-click="getPage"
   data-config="willPaginateConfig"
   ng-if="prize_balls.meta.total > prize_balls.meta.perpage">
  </div>
</div>
