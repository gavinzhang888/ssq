<div class="abs-center wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('angle/logo.png') %>" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
        <p>
          <%= content_tag(:div, flash[:error], class: "error-box") if flash[:error] %>
          <%= content_tag(:div, flash[:notice], class: "error-box") if flash[:notice] %>
          <%= content_tag(:div, flash[:alert], class: "error-box") if flash[:alert] %>
        </p>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),"data-parsley-validate" => "","novalidate" => "",:class => "mb-lg") do |f| %>
          <div class="form-group has-feedback">
            <%= f.text_field :login, placeholder: "用户名或邮箱", class: "form-control", id: "exampleInputEmail1", autocomplete: "off", required: "required"  %>
            <span class="fa fa-envelope form-control-feedback text-muted"></span>
          </div>
          <div class="form-group has-feedback">
            <%= f.password_field :password, placeholder: "密码", class: "form-control", id:"exampleInputPassword1", required: "required" %>
             <span class="fa fa-lock form-control-feedback text-muted"></span>
          </div>
          <%= f.submit "登录", class: "btn btn-block btn-primary mt-lg" %>
        <% end %>
      </div>
   </div>
   <div class="linking">
     <a href="http://www.netfarmer.com.cn" target="_blank">来自旺田云服务</a>
   </div>
</div>
